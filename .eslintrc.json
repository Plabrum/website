{
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/strict",
    "prettier"
  ],
  "plugins": ["@typescript-eslint"],
  "rules": {
    "semi": ["error", "never"],
    "no-console": "warn"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  },
  "ignorePatterns": ["node_modules", "build", "dist", "public"]
}
